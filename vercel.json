{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9",
                "excludeFiles": "{.next,.vercel,*.cache,node_modules,public,static/models}/**.sav"
            }
        }
    ],
    "functions": {
        "api/**": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ]
} 